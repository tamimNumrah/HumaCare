<!DOCTYPE html>
<html lang="en">
<head>
   <!-- Import Google Icon Font-->
   <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
   <!--Import materialize.css-->
   <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
   <link rel="stylesheet" href="../css/main.css">
   <!-- Script tag for Fontawesome-->
   <script defer src="https://use.fontawesome.com/releases/v5.15.4/js/all.js" integrity="sha384-rOA1PnstxnOBLzCLMcre8ybwbTmemjzdNlILg8O7z1lUkLXozs4DHonlDtnE7fpc" crossorigin="anonymous"></script>
   <!--Let browser know website is optimized for mobile-->
   <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
   <title>Huma Care</title>
</head>
<body>
    <!--Navigation Bar-->
    <%- include ('./partials/navbar') %>
    <!-- Login Section-->
    <section>
        <div class="container indigo-text darken-4">
            <div class="row" style="padding-top: 12%; padding-bottom: 10%;">
                <!--Image Slide-->
                <div class="col s6">
                    <img class="materialboxed" width="500" src="../assests/patientLogin.jpg">
                </div>
                <div class="col s6" >
                    <div class="patientLogin"style="padding-top: 2px;">
                        <form action="/patients/login" class="card-panel indigo-text text-darken-4" method="POST">
                            <%- include ('./partials/messages') %>
                          <div class="input-field">
                                <label>Email</label><br>
                                <input type="email" id="email" name="email" required><br>
                            </div>
                            <div class="input-field">
                                <label>Password</label><br>
                                <input type="password" id="password" name="password" required><br>
                            </div>
                            <input type="submit" value="Submit" class="btn indigo white-text" id="formSubmit">
                            <p>If you don't have an account, please <a href="/patients/register"class="">register</a> here.</p>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section>

    </section>
    <%- include ('./partials/footer') %>  
</body>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <!--JavaScript at end of body for optimized loading-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <script type="text/javascript" src="../js/script.js"></script>
</html>