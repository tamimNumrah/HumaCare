<!DOCTYPE html>
<html lang="en">
<head>
   <!-- Import Google Icon Font-->
   <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
   <!--Import materialize.css-->
   <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
   <link rel="stylesheet" href="../css/main.css">
   <!-- Script tag for Fontawesome-->
   <script defer src="https://use.fontawesome.com/releases/v5.15.4/js/all.js" integrity="sha384-rOA1PnstxnOBLzCLMcre8ybwbTmemjzdNlILg8O7z1lUkLXozs4DHonlDtnE7fpc" crossorigin="anonymous"></script>
   <!--Let browser know website is optimized for mobile-->
   <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
   <title>Huma Care</title>
</head>
<body>
    <!--Navigation Bar-->
    <%- include ('./partials/navbar') %>
    <!-- Login Section-->
    <section>
        <div class="container indigo-text darken-4">
            <div class="row" style="padding-top: 8%; padding-bottom: 8%;">
                <!--Image Slide-->
                <div class="col s6">
                    <img class="materialboxed" width="550" src="../assests/doctor-login.jpg">
                </div>
                <div class="col s6" >
                    <div class="doctorLogin"style="padding-top: 50px;">
                        <%- include ('./partials/messages') %>
                        <form action="login" class="card-panel indigo-text text-darken-4" method="POST">
                            <div class="input-field">
                                <label>User Name</label><br>
                                <input type="email" id="email" name="email"><br>
                            </div>
                            <div class="input-field">
                                <label>Password</label><br>
                                <input type="password"  id="password" name="password"><br>
                            </div>
                            <input type="submit" value="Submit" class="btn indigo white-text" id="formSubmit">
                            <p>If you don't have an account.Please <a href="/doctors/registration"class="">register</a> here</p>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
    
    <footer class="section indigo darken-4 white-text center">
        <h2 class="brand-logo">Huma Care</h2>
        <p class="flow-text">Copyright &copy; 2022, Huma Care.All rights reserved</p>
    </footer>  
</body>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <!--JavaScript at end of body for optimized loading-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <script type="text/javascript" src="../js/script.js"></script>
</html>